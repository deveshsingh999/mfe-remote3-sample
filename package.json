{
  "name": "mfe-remote1",
  "version": "0.1.0",
  "description": "Microfrontend 1",
  "main": "index.js",
  "scripts": {
    "dev": "DEV_SERVER=true webpack-dev-server --hot --port 3001 --config config/webpack.client.js",
    "build": "npm run clean && npm run build:client && npm run build:server && npm run types",
    "build:client": "webpack --progress --config config/webpack.client.js",
    "build:server": "webpack --progress --config config/webpack.server.js",
    "start": "npm run build && serve -s dist -p 3001",
    "types": "dotenv -e env/.env -- npm run types:gzip",
    "types:gzip": "tar czvf ./dist/types/${MFE_NAME:=remote}-dts.tgz -C ./dist/types/ ${MFE_NAME:=remote}",
    "clean": "rm -rf dist",
    "blame": "git log -S",
    "hist": "git log --oneline | grep -i",
    "follow": "git log --follow --oneline"
  },
  "author": "Abhishek Raj <abhishekr@dewsolutions.in>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.4",
    "react-router-dom": "^6.11.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.5",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@module-federation/node": "^0.14.0",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.4",
    "cssnano": "^6.0.1",
    "dotenv-cli": "^7.2.1",
    "dts-loader": "^0.1.8",
    "html-webpack-plugin": "^5.5.1",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.2",
    "postcss-preset-env": "^8.4.1",
    "serve": "^14.2.0",
    "style-loader": "^3.3.3",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-node-externals": "^3.0.0"
  }
}
